{
    "name": "wayhood/hyperf-dto",
    "description": "php hyperf dto",
    "license": "MIT",
    "keywords": [
        "dto",
        "hyperf",
        "hyperf dto",
        "hyperf swagger"
    ],
    "authors": [
        {
            "name": "TangWei",
            "email": "tw2066@163.com",
            "homepage": "https://github.com/tw2066",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.0",
        "netresearch/jsonmapper": "^4.0",
        "hyperf/http-server": "3.0.x-dev",
        "hyperf/di": "3.0.x-dev",
        "hyperf/json-rpc": "3.0.x-dev",
        "hyperf/rpc-server": "3.0.x-dev",
        "hyperf/validation": "3.0.x-dev",
        "symfony/serializer": "^5.0",
        "jetbrains/phpstorm-attributes": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": ">=7.0",
        "symfony/var-dumper": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "Hyperf\\DTO\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\DTO\\": "tests/"
        }
    },
    "extra": {
        "hyperf": {
            "config": "Hyperf\\DTO\\ConfigProvider"
        },
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix src && php-cs-fixer fix tests"
    }
}
